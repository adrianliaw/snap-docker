{
  "version": 1,
  "schedule": {
    "type": "simple",
    "interval": "30s"
  },
  "workflow": {
    "collect": {
      "metrics": {
        "/intel/docker/*": {},
        "/intel/psutil/*": {},
        "/intel/procfs/meminfo/*": {},
        "/intel/procfs/disk/*": {}
      },
      "config": {
        "/intel/procfs": {
          "proc_path": "/rootfs/proc"
        },
        "/intel/docker": {
          "procfs": "/rootfs/proc"
        }
      },
      "publish": [
        {
          "plugin_name": "influxdb",
          "config": {
            "host": "influxsrv",
            "port": 8086,
            "database": "snap",
            "user": "root",
            "password": "hyperpilot",
            "https": false,
            "skip-verify": false
          }
        }
      ]
    }
  }
}
